---
import type { GetStaticPaths } from 'astro';
import MainLayout from '@layouts/MainLayout.astro';
import TypedBlogPost from '@components/TypedBlogPost.astro';
import { getCollection } from 'astro:content';

// Type GetStaticPaths de Astro

export const getStaticPaths = (async ({ paginate }) => {
	const blogPosts = await getCollection('blog');

	return paginate(blogPosts, { pageSize: 2 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<MainLayout title={`Astro Blog - PÃ¡gina ${page.currentPage}`}>
	<section class="container px-6 py-10 mx-auto">
		<div class="py-10 mx-auto">
			<h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
				Astro Blog paginado
			</h1>
			<a class="text-blue-500 hover:underline mr-2" href="/" id="btn-back">Regresar</a>
		</div>

		<section class="bg-gray-900" aria-label="Entradas de blog">
			<div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
				{page.data.map((post: any) => <TypedBlogPost post={post} />)}
			</div>
		</section>

		<section aria-label="Controles" class="flex justify-between mt-10">
			<!--   page .. ?? prev   -->
			<a
				href={page.url.prev}
				class:list={[
					'btn',
					{
						disabled: !page.url.prev,
					},
				]}>Anteriores</a
			>

			<!--   page .. ?? next   -->
			<a
				href={page.url.next}
				class:list={[
					'btn',
					{
						disabled: !page.url.next,
					},
				]}>Siguientes</a
			>
		</section>
	</section>
</MainLayout>

<style>
	@import 'tailwindcss';
	.btn {
		@apply bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer;
	}

	.disabled {
		@apply bg-gray-600 hover:bg-gray-600;
	}
</style>
