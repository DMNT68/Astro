---
import MainLayout from '@layouts/MainLayout.astro';
import { siteConfig } from 'src/config/site-config';
import AuthorCard from '@components/AuthorCard.astro';
import { getCollection } from 'astro:content';

const authors = await getCollection('author');
---

<MainLayout title="Listado de Autores">
	<section class="container px-6 py-10 mx-auto">
		<h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">
			{siteConfig.title}
		</h1>
		<a class="text-blue-500 hover:underline mr-2" href="/" id="btn-back">Regresar</a>
	</section>

	<!-- AuthorCard -->
	<section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
		{authors.map((author) => <AuthorCard author={author} />)}
	</section>
</MainLayout>
