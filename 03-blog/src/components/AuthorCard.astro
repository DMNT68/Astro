---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
	author: CollectionEntry<'author'>;
}
const { author } = Astro.props;
const { avatar, bio, github, linkedIn, name, subtitle, twitter } = author.data;
---

<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
	<Image
		width="200"
		height="200"
		class="w-32 h-32 rounded-full mx-auto"
		src={avatar}
		alt="Profile picture"
	/>
	<h2 class="text-center text-2xl font-semibold mt-3 text-gray-900">{name}</h2>
	<p class="text-center text-gray-600 mt-1">{subtitle}</p>
	<div class="flex justify-center mt-5">
		<a
			target="_blank"
			href={`https://x.com/${twitter}`}
			class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a
		>
		<a target="_blank" href={linkedIn} class="text-blue-500 hover:text-blue-700 mx-3"
			>LinkedIn</a
		>
		<a target="_blank" href={github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
	</div>
	<div class="mt-5">
		<h3 class="text-xl font-semibold text-gray-900">Bio</h3>
		<p class="text-gray-600 mt-2">{bio}</p>
		<div class="flex justify-end">
			<a href={`/blog/${author.id}`} class="text-blue-500 hover:text-blue-700 mt-3"
				>Leer mas</a
			>
		</div>
	</div>
</div>
