---
interface Props {
	name: string;
	url: string;
	isBig?: boolean;
}
const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
const urlImg = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
	href={`/pokemons/${name}`}
	class:list={[
		`rounded flex flex-col justify-center items-center p-2`,
		{
			border: !isBig,
		},
	]}
>
	<img
		transition:name={`${name}-image`}
		class:list={[{ 'w-60 h-60': isBig, 'w-16 h-16': !isBig }]}
		src={urlImg}
		alt={name}
	/>
	<span class:list={['capitalize', { 'text-3xl': isBig }]}>#{id} {name}</span>
</a>
