---
import { Counter } from '@components/Counter';
import Title from '@components/shared/Title.astro';
import MainLayout from '@layouts/MainLayout.astro';

const counterValue = 20;
---

<MainLayout title="Favoritos">
	<Title>Islas</Title>

	<div
		style={{
			height: '2000px',
			backgroundColor: 'green',
			opacity: 0.5,
		}}
	>
	</div>

	<Counter transition:persist="counter" client:visible initValue={counterValue}>
		<Title>Counter Islands</Title>
	</Counter>
</MainLayout>
